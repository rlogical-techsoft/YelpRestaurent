<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ContentBgColor"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="0dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/AppTheme.PopupOverlay"/>

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_top">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/item_card_main_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_3sdp"
                app:cardBackgroundColor="@color/color_top"
                card_view:cardCornerRadius="@dimen/_1sdp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="@dimen/_3sdp">

                    <com.yelprestaurant.utils.SquareImageView
                        android:id="@+id/img_restaurant"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:scaleType="centerCrop"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_restaurant_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Restaurant Name"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/_16sdp"/>

                        <TextView
                            android:id="@+id/txt_restaurant_status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:text="Open / Close"
                            android:textColor="@color/GridTxtColor"
                            android:textSize="@dimen/_14sdp"/>

                        <TextView
                            android:id="@+id/txt_restaurant_categories"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Categories"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/_14sdp"/>
                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_3sdp"
                app:cardBackgroundColor="@color/color_top"
                card_view:cardCornerRadius="@dimen/_1sdp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_3sdp">

                    <TextView
                        android:id="@+id/txt_restaurant_address_information"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Address Information"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/_17sdp"/>

                    <TextView
                        android:id="@+id/txt_restaurant_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:text="Address"
                        android:textColor="@color/TransBlack2"
                        android:textSize="@dimen/_15sdp"/>

                    <TextView
                        android:id="@+id/txt_restaurant_distance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:text="Distance"
                        android:textColor="@color/TransBlack2"
                        android:textSize="@dimen/_15sdp"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_3sdp"
                app:cardBackgroundColor="@color/color_top"
                card_view:cardCornerRadius="@dimen/_1sdp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_3sdp">

                    <TextView
                        android:id="@+id/item_txt_contact_information"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:text="Contact Information"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/_17sdp"/>

                    <TextView
                        android:id="@+id/item_txt_radar_phone_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:text="Phone 1"
                        android:textColor="@color/TransBlack2"
                        android:textSize="@dimen/_15sdp"/>

                    <TextView
                        android:id="@+id/item_txt_radar_phone_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:text="Phone 2"
                        android:textColor="@color/TransBlack2"
                        android:textSize="@dimen/_15sdp"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_3sdp"
                app:cardBackgroundColor="@color/color_top"
                card_view:cardCornerRadius="@dimen/_1sdp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/_3sdp">

                    <TextView
                        android:id="@+id/item_txt_rating_review_information"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:text="Rating &amp; Reviews"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/_17sdp"/>

                    <TextView
                        android:id="@+id/item_txt_radar_rating"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rating: "
                        android:textColor="@color/TransBlack2"
                        android:textSize="@dimen/_15sdp"/>

                    <TextView
                        android:id="@+id/item_txt_radar_total_reviews"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:text="Total Reviews"
                        android:textColor="@color/TransBlack2"
                        android:textSize="@dimen/_15sdp"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/item_card_website"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_3sdp"
                app:cardBackgroundColor="@color/color_top"
                card_view:cardCornerRadius="@dimen/_1sdp"
                card_view:cardUseCompatPadding="true">

                <TextView
                    android:id="@+id/item_txt_website"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:padding="@dimen/_3sdp"
                    android:text="Website"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/_15sdp"/>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>